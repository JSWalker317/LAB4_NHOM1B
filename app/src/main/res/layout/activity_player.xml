<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0FFD600"
    android:orientation="vertical"
    tools:context=".PlayerActivity">

    <TextView
        android:id="@+id/txt_Song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:text="New Song is loading..."
        android:textAlignment="center"
        android:textColor="#00C853"
        android:textSize="20sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/img_music"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:src="@drawable/nhom_1b" />

    <TextView
        android:layout_margin="10dp"
        android:textStyle="italic"
        android:visibility="gone"
        android:background="#40C4FF"
        android:padding="5dp"
        android:textColor="#3E2723"
        android:textSize="15sp"
        android:id="@+id/tv_lyric"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:text="Lyric Song \n Lyric Song\n Lyric Song "
        android:layout_height="200dp"
       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/seekbar"
            android:text="0:00"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_End"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/seekbar"
            android:text="2:10"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#56FF6D00"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <TextView
            android:id="@+id/tv_showLyric"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="3dp"
            android:background="@drawable/btn_ct"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:text="Show\nLyric"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_pre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_skip_previous"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_pause"
            tools:ignore="SpeakableTextPresentCheck" />


        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_skip_next"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_stop"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#77AEEA00"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="MSSV: 18200220 \n Họ và tên: Phan Văn Sơn"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>